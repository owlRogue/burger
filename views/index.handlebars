<div class="row">
  <h1>Burger Bungalow</h1>


  <div class="column" id="col-1">
    <h2>Burgers Menu</h2>

    <ul>
      {{#each burgers}} {{#unless ordered}} {{> burgers/burger-block ordered=true}} {{/unless}} {{/each}}
    </ul>
  </div>

  <div class="column" id="col-2">
    <h2>Your Order</h2>

    <ul>
      {{#each burgers}} {{#if ordered}} {{> burgers/burger-block ordered=false}} {{/if}} {{/each}}
    </ul>
  </div>

</div>
<br>
<br>

<div style="height:3px; background-color:darkgray"></div>
<br>
<h2>Custom Burger Order</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger_name"></label>
    <br>
    Burger Name: <input type="text" id="burger_name" name="burger_name">
    <br>
    {{!-- Toppings:    <input type="text" id="toppings" name="toppings">
    <br> --}}
  </div>
  <br>

  <div class="form-group">
    <label for="ordered">Are you sure you want to order this custom burger? Taste is subject to variation. </label>
    <br>
    <input type="radio" name="ordered" value="0" checked> yes, I'm sure
    <br>
    {{!-- <input type="radio" name="ordered" value="0"> order --}}
  </div>

  <button type="submit">Add Burger</button>
</form>



