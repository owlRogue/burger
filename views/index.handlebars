<div class="row">
  <h1>Burgers!</h1>


  <div class="column" id="col-1">
    <h2>Burgers Menu!</h2>



    <ul>
      {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block devoured=true}} {{/unless}} {{/each}}
    </ul>
  </div>

  <div class="column" id="col-2">
    <h2>Your Order</h2>

    <ul>
      {{#each burgers}} {{#if devoured}} {{> burgers/burger-block devoured=false}} {{/if}} {{/each}}
    </ul>
  </div>

</div>

<h2>Add a Burger to our Menu!</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger_name">Burger Name:</label>
    <input type="text" id="burger_name" name="burger_name">
  </div>

  <div class="form-group">
    <label for="devoured">Have you had this kind of burger before?</label>
    <br>
    <input type="radio" name="devoured" value="1" checked> Yes!
    <br>
    <input type="radio" name="devoured" value="0"> No I have not tried it before...
  </div>

  <button type="submit">Add Burger</button>
</form>