<div class="row">
  <h1>Burgers!</h1>


  <div class="column" id="col-1">
    <h2>Burgers Menu!</h2>



    <ul>
      {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block devoured=true}} {{/unless}} {{/each}}
    </ul>
  </div>

  <div class="column" id="col-2">
    <h2>Your Order</h2>

    <ul>
      {{#each burgers}} {{#if devoured}} {{> burgers/burger-block devoured=false}} {{/if}} {{/each}}
    </ul>
  </div>

</div>

<h2>Custom Burger Order</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger_name">Burger Name:</label>
    <br>
    <input type="text" id="burger_name" name="burger_name">
  </div>
  <br>

  <div class="form-group">
    <label for="devoured">Select up three toppings</label>
    <br>
    <input type="radio" name="devoured" value="extra cheese" checked> extra cheese 
    <br>
    <input type="radio" name="devoured" value="artichoke hearts"> artichoke hearts
    <br>
    <input type="radio" name="devoured" value=""> 
    <br>
    <input type="radio" name="devoured" value=""> 
    <br>
    <input type="radio" name="devoured" value=""> 
    <br>
    <input type="radio" name="devoured" value=""> 
  </div>

  <button type="submit">Add Burger</button>
</form>

