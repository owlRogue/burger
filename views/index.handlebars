<div class="row">
  <h1>Burgers!</h1>


  <div class="column" id="col-1">
    <h2>Burgers Menu!</h2>

    <ul>
      {{#each burgers}} {{#unless ordered}} {{> burgers/burger-block ordered=true}} {{/unless}} {{/each}}
    </ul>
  </div>

  <div class="column" id="col-2">
    <h2>Your Order</h2>

    <ul>
      {{#each burgers}} {{#if ordered}} {{> burgers/burger-block ordered=false}} {{/if}} {{/each}}
    </ul>
  </div>

</div>

<h2>Custom Burger Order</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger_name">Burger Name:</label>
    <br>
    <input type="text" id="burger_name" name="burger_name">
  </div>
  <br>

  <div class="form-group">
    <label for="ordered">Select up to three?</label>
    <br>
    <input type="radio" name="ordered" value="1" checked> Yes!
    <br>
    <input type="radio" name="ordered" value="0"> No I have not tried it before...
  </div>

  <button type="submit">Add Burger</button>
</form>



